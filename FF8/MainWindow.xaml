<Window x:Class="FF8.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FF8"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="FF8 SaveConverter(Nintendo Switch)" Height="120" Width="450">
    <Grid>
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">
                <Label DockPanel.Dock="Left" Content="Path:"/>
                <Button DockPanel.Dock="Right" Content="..." Click="ButtonPath_Click"/>
                <TextBox x:Name="FilePath"/>
            </DockPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
                <RadioButton x:Name="Export" Content="Export" IsChecked="True"/>
                <RadioButton Content="Import"/>
                <CheckBox x:Name="chkTinfoil" Content="Tinfoil" Margin="10,0,0,0"/>
            </StackPanel>
            <Button Content="Run" Click="ButtonRun_Click"/>
        </DockPanel>
    </Grid>
</Window>
